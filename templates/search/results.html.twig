{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    <h2>Results for "{{ query }}"</h2>

    {% if projects is not empty %}
        <h3>Projects</h3>
        <ul>
            {% for project in projects|slice(0, 5) %}
                <li>
                    <a href="{{ path('project', {'id': project.id}) }}">{{ project.projectName }}</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No projects found.</p>
    {% endif %}
    {% if teams is not empty %}
        <h3>Teams</h3>
        <ul>
            {% for team in teams|slice(0, 5) %}
                <li>
                    <a href="{{ path('team_show', {'id': team.id}) }}">{{ team.name }}</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No teams found.</p>
    {% endif %}
    {% if userList is not empty %}
        <h3>Users</h3>
        <ul>
            {% for user in userList|slice(0, 5) %}
                <li>
                    <a href="{{ path('app_profile', {'pseudo': user.pseudo}) }}"><p>{{ user.name }}{{" "}}{{ user.forename }}</p></a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No users found.</p>
    {% endif %}
{% endblock %}

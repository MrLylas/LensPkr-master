{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    {# <h2>Add Some Pictures to Project</h2> #}
    <a href="{{ path('project', {'id': project.id}) }}" class="back-btn"><img src="{{ asset('images/back.png') }}" alt="Back button"></a>
    <div class="add-project">
        <h1>Add Images to : "{{ project.projectName }}"</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(form.images) }}
            {{ form_row(form.description) }}
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
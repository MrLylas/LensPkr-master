{% extends 'base.html.twig' %}

{% block title %}Hello JobController!{% endblock %}

{% block body %}
<h2>{{ job.jobName }} </h2>
<div class="job-detail col">
    <div class="row">
        <p class="col"><strong>Speciality :</strong>{{" "}}{{ job.jobSpeciality }}</p>
        <p class="col"><strong>By :</strong>{{" "}}{{ job.user.pseudo }}{{" "}}on{{" "}}{{ job.creation|date('d/m/Y') }}</p>
    </div>
    <div class="row">
        <h3>Contract</h3>
        <p class="col"><strong>Contract type </strong>{{ job.contract }}</p>
        <p class="col"><i class="fas fa-map-marker-alt"></i>{{" "}}{{ job.location }}</p>
        <p class="col"><strong>Postal code </strong>{{ job.cp }}</p> 
        <p class="col"><strong>Begin Date </strong>{{job.begin|date('d/m/Y')}}</p>
        <p class="col"><strong>Finish Date </strong>{{job.finish|date('d/m/Y')}}</p>
    </div>
    <div class="offer-card">
        <h3>Description</h3>
        <div class="row">
            <p class="col">{{ job.description|raw }}</p>
        </div>
    </div>
    <div class="btns">
        {% if job.id in appliedAsks %}
        <button disabled>Déjà postulé</button>
        {% else %}
        <a href="{{ path('apply_to_job', { 'id': job.id }) }}" class="btn btn-primary">Postuler</a>
        {% endif %}
    </div>
</div>
{% endblock %}

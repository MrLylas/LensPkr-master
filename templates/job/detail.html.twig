{% extends 'base.html.twig' %}

{% block title %}Hello JobController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Job Detail</h2>
<div class="example-wrapper">
    <h3>{{ job.jobName }} </h3>
    <p>{{ job.description }}</p> 
    <a href="{{ path('apply_to_job', {'id': job.id})}}">Apply</a>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello JobController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Jobs</h2>
<div class="example-wrapper">
    {% for job in jobs %}
    {% if job.user.id != app.user.id %}
    <div class="jobcard">
        <h2>{{ job.jobName }}</h2>
        <p>{{ job.description }}</p>
        {% if job.id in appliedAsks %}
            <button disabled>Déjà postulé</button>
        {% else %}
            <a href="{{ path('apply_to_job', { 'id': job.id }) }}" class="btn btn-primary">Postuler</a>
        {% endif %}
    </div>
    {% endif %}
    {% endfor %}
    {# <div class="d-flex">
        {% if page > 1 %}
            <a href="{{ path('app_job', {'page': page - 1}) }}">Previous</a>
        {% endif %}
    </div> #}
</div>
{% endblock %}

{# <!DOCTYPE html> #}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&display=swap" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
{############################################################## Navbar ########################################################}
        <nav class="navbar navbar-expand-lg">
            <div>
                {# <a href="{{path('app_home')}}"><img class="logo" src="{{ asset('images/LensPkr.svg') }}" alt="Logo-LensPkr"></a> #}
                <a href="{{path('app_home')}}" class="navbar-brand"><img class="logo" src="{{ asset('images/LensPkr.svg') }}" alt="Logo-LensPkr"></a>
            </div>
            <div class="nav-mid">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1">Search</button>
                </div>
                <div class="job-btns">                
                    {% if app.user is not null %}  
                    <a class="btn btn-primary" href="{{path('app_jobs', {'id': app.user.id})}}">Find Jobs</a>
                    <a class="btn btn-dark" href="{{path('post_job', {'id': app.user.id})}}">Post Jobs</a>
                    {% else %}
                    <a class="btn btn-primary" href="{{path('app_login')}}">Login</a>
                    <a class="btn btn-dark" href="{{path('app_register')}}">Sign in</a>
                    {% endif %}
                </div>  
            </div>
            <div class="nav-right">
                {% if app.user is not null %}        
                    <a href="{{ path('app_user_skill', {'id': app.user.id}) }}"><img class="nav-icons" src="{{ asset('images/User.svg') }}" alt="Profile"></a>
                    <a href=""><img class="nav-icons" src="{{ asset('images/Chat.svg') }}" alt=""></a>
                    <a href="{{ path('received') }}"><img class="nav-icons" src="{{ asset('images/mailbox.png') }}" alt="Mailbox"></a>
                    <a href=""><img class="nav-icons" src="{{ asset('images/Bell.svg') }}" alt="Notifications"></a>
                    <a href=""><img class="nav-icons" src="{{ asset('images/Settings.svg') }}" alt="Settings"></a>
                {% endif %}
            </div>
        </nav>

{############################################################## Sidebar ########################################################}
<button class="btn nav-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><img src="{{ asset('images/burger.png') }}" alt="Menu Burger"></button>
{# <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Enable both scrolling & backdrop</button> #}
{% block body %}
{% endblock %}
<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    {# <p>Try scrolling the rest of the page to see this option in action.</p> #}
            {# <div class="container"> #}
            <aside>
                <div class="aside-block">
                    <div class="aside-title"><img src="{{ asset('images/List.svg') }}" alt="Speciality-List">Speciality</div>
                    <hr>
                    <div class="aside-content">
                        <a href="">Direction</a><br>
                        <a href="">Production</a><br>
                        <a href="">Video</a><br>
                        <a href="">Sounds</a><br>
                        <a href="">Lights</a><br>
                    </div>
                </div>
                <div class="aside-block">
                    <div class="aside-title"><img src="{{ asset('images/Project.svg') }}" alt=""> Project</div>
                    <hr>
                    <div class="aside-content">
                        <a href="{{path('new_project')}}">New Project</a><br>
                        <a href="{{path('project_feed')}}">Récents</a><br>
                        <a href="">Popular</a><br>
                        <a href="">Followed</a><br>
                        <a href="">My Projects</a><br>
                        <a href="">My Team's Projects</a><br>
                    </div>
                </div>
                <div class="aside-block">
                    <div class="aside-title"><img src="{{ asset('images/Team.svg') }}" alt="">Teams</div>
                    <hr>
                    <div class="aside-content">
                        <a href="">My Team</a><br>
                        <a href="">Popular Teams</a><br>
                        <a href="">Followed Teams</a><br>
                    </div>
                </div>
                <footer class="aside-block">
                    <div class="aside-title"><img src="{{ asset('images/Lock.svg') }}" alt="">General Terms and Conditions</div>
                        <hr>
                        <div class="aside-content">
                            <a href="{{path('app_rules')}}">Rules</a><br>
                            <a href="">Privacy Police</a><br>
                            <a href="">User Contract</a><br>
                            <a href="">About Us</a><br>
                        </div>
                        <hr>
                    </div>
                    <span>&copy; 2025 LensPkr by <br><a target="_blank" href="https://github.com/MrLylas">LeLylas</a></span>
                </footer>
            </aside>
        {# </div> #}
  </div>
</div>
{############################################################## Content ########################################################}

    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endfor %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>


